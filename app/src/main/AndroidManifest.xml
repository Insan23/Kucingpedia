<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.insan.kucingpedia">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.HalamanTambah"
            android:label="Tambah Informasi Kucing Baru"
            android:parentActivityName=".activities.HalamanUtama"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HalamanAbout"
            android:label="Tentang"
            android:parentActivityName=".activities.HalamanUtama"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HalamanDetail"
            android:label="Detail Kucing"
            android:parentActivityName=".activities.HalamanUtama"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HalamanUtama"
            android:label="Kucing Pedia"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.HalamanMulai"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>